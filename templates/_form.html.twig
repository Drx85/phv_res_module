{{ form_start(form) }}
{{ form_errors(form) }}
	<div class="col-span-6 sm:col-span-3">
		<div class="col col-md-4">{{ form_row(form.origin) }}</div>
	</div>
	<div class="col-span-6 sm:col-span-3">
		<div class="col col-md-4">{{ form_row(form.destination) }}</div>
	</div>
	<div class="col-span-6 sm:col-span-3">
		<div class="col col-md-4">{{ form_row(form.departureDateTime) }}</div>
	</div>
	<div class="col-span-6 sm:col-span-3">
		<div class="col col-md-4">{{ form_row(form.name) }}</div>
	</div>
	<div class="col-span-6 sm:col-span-3">
		<div class="col col-md-4">{{ form_row(form.email) }}</div>
	</div>
	<div class="col-span-6 sm:col-span-3">
		<div class="col col-md-4">{{ form_row(form.phoneNumber) }}</div>
	</div>
	{{ form_rest(form) }}
	</div>
	<div class="px-4 py-3 text-right sm:px-6">
		<button type="submit"
				class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white
						bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
			Suivant
		</button>
	</div>
{{ form_end(form) }}